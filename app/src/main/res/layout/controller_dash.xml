<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/controllerbg">

    <Switch
        android:id="@+id/light_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back_switch"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:text="Switch"
        android:textOff="Off"
        android:textOn="On"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/light_switch"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_toLeftOf="@+id/light_switch"
        android:layout_toStartOf="@+id/light_switch"
        android:text="Light"
        android:textColor="@color/black_overlay"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="17dp"
        android:text="Socket"
        android:textColor="@color/black_overlay" />

    <Switch
        android:id="@+id/socket_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Off"
        android:textOn="On"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/light_switch"
        android:layout_alignStart="@+id/light_switch"
        android:text="Switch" />

    <Switch
        android:id="@+id/front_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/socket_switch"
        android:layout_alignStart="@+id/socket_switch"
        android:layout_alignTop="@+id/textView4"
        android:text="Switch"
        android:textOff="Off"
        android:textOn="On" />

    <Switch
        android:id="@+id/back_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Off"
        android:textOn="On"
        android:layout_alignLeft="@+id/front_switch"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:text="Switch" />

    <Switch
        android:id="@+id/all_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/back_switch"
        android:layout_alignStart="@+id/back_switch"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="37dp"
        android:text="Switch"
        android:textOff="Off"
        android:textOn="On" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/light_switch"
        android:text="Front"
        android:textColor="@color/black_overlay" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/back_switch"
        android:layout_alignBottom="@+id/back_switch"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:text="Back"
        android:textColor="@color/black_overlay"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/all_switch"
        android:text="All"
        android:textColor="@color/black_overlay"/>
</RelativeLayout>