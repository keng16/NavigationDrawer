<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_72013202"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/mybutton"
        android:textColor="@color/white"
        android:enabled="false"
        android:text="Remarks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_ProfilePic_Remarks"
        android:layout_width="99dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_studentnumber_remarks"
        android:layout_width="216dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="56dp"
        android:background="#99FFFFFF"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fullname_remarks"
        android:layout_width="216dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:background="#99FFFFFF"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_studentnumber_remarks" />

    <TextView
        android:id="@+id/tv_program_remarks"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="28dp"
        android:background="#99FFFFFF"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/tv_fullname_remarks" />

    <TextView
        android:id="@+id/tv_course_remarks"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:background="#99FFFFFF"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_remarks"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/tv_date_remarks"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:background="#99FFFFFF"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/tv_course_remarks"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/et_Remarks"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/textinputborder"
        android:editable="false"
        android:ems="30"
        android:enabled="false"
        android:inputType="textMultiLine"
        android:textColor="@color/backgroundcolor"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_status_remarks"
        tools:layout_editor_absoluteX="0dp">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_change_status_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/mybutton"
        android:text="Status"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_remarks"
        tools:layout_editor_absoluteX="0dp" />



</android.support.constraint.ConstraintLayout>